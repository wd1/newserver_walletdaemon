{
  "extends": "airbnb-base",
  "env": {
    "node": true,
    "mocha": true,
    "es6": true
  },
  "plugins": [
    "chai-friendly"
  ],
  "rules": {
    "comma-dangle": 0,
    "consistent-return": 0,
    "function-paren-newline": [
      "error",
      "never"
    ],
    "no-param-reassign": 0,
    "no-underscore-dangle": 0,
    "no-shadow": 0,
    "no-console": 0,
    "no-plusplus": 0,
    "no-unused-expressions": 0,
    "chai-friendly/no-unused-expressions": 2,
    "max-len": [
      "error",
      {
        "code": 200
      }
    ],
    "indent": 0,
    "arrow-parens": [
      "error",
      "as-needed"
    ],
    "no-mixed-operators": "warn",
    "no-unused-vars": "off",
    "eqeqeq": "warn",
    "no-await-in-loop": "warn",
    "no-use-before-define": "warn",
    "no-restricted-globals": "warn",
    "array-callback-return": "warn",
    "quotes": "warn",
    "quote-props": "warn",
    "prefer-spread": "warn",
    "prefer-rest-params": "warn",
    "no-trailing-spaces": 0,
    "object-curly-spacing": 0,
    "no-multi-spaces": 0
  }
}
